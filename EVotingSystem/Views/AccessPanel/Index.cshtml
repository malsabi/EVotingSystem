@model AccessPanelModel
@{
    ViewData["Title"] = "Access Panel Page";
}
<div class="jumbotron rounded-lg" style="min-height: 65vh">
    <div class="container-fluid">
        <h1 class="text-uppercase text-center">Admin Dashboard Access Panel</h1>

        <form class="mt-md-5" asp-controller="AccessPanel" asp-action="Index" method="post">
            <div class="form-group form-row justify-content-md-center">
                <div class="col-md-4 mb-3">
                    <label asp-for="Email" for="AdminEmailTextBox">Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="AdminEmailTextBox" placeholder="Enter your Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row justify-content-md-center">
                <div class="col-md-4 mb-3">
                    <label asp-for="Password" for="AdminPasswordTextBox">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="AdminPasswordTextBox" placeholder="Enter your Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-row justify-content-md-center">
                <div class="col-md-4 mb-3">
                    <div class="form-check ml-auto">
                        <input asp-for="StaySignedIn" type="checkbox" class="form-check-input" id="AdminStaySignedCheckBox">
                        <label asp-for="StaySignedIn" class="form-check-label" for="AdminStaySignedCheckBox">Stay Signed In</label>
                    </div>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-md-4 mb-3">
                    <button id="AccessPanelButton" type="submit" class="btn btn-primary btn-lg btn-block">
                        Access
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>