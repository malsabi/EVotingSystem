@model RecoverModel
@{
    ViewData["Title"] = "Recover Password Page";
}
<div class="jumbotron rounded-lg" style="min-height: 65vh">
    <div class="container-fluid">
        <h1 class="text-capitalize text-center">Recover Password</h1>
        <form class="mt-md-5" asp-controller="Login" asp-action="Recover" method="post">
            <div class="form-group form-row justify-content-md-center">
                <div class="col-md-4 mb-3">
                    <label asp-for="StudentID" for="NationalIdTextBox">Student ID</label>
                    <input asp-for="StudentID" type="text" class="form-control" id="StudentIdTextBox" aria-describedby="StudentIdHelp" placeholder="Enter your Student ID">
                    <small id="StudentIdHelp" class="form-text text-muted">We'll never share your student Id with anyone else.</small>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="col-md-4 mb-3">
                    <button id="RecoverButton" type="submit" class="btn btn-primary btn-lg btn-block">Recover</button>
                </div>
            </div>
        </form>
    </div>
</div>